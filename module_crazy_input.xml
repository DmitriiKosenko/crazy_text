<?xml version="1.0" encoding="UTF-8"?>
<project name="module_crazy_input" default="compile.module.crazy_input">
  <dirname property="module.crazy_input.basedir" file="${ant.file.module_crazy_input}"/>
  
  
  <property name="compiler.args.crazy_input" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="crazy_input.output.dir" value="${module.crazy_input.basedir}/out/production/crazy_input"/>
  <property name="crazy_input.testoutput.dir" value="${module.crazy_input.basedir}/out/test/crazy_input"/>
  
  <path id="crazy_input.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="crazy_input.module.production.classpath">
    <path refid="library.cloudbees.classpath"/>
    <path refid="library.gwt-user.classpath"/>
    <pathelement location="${basedir}/lib/jsr305-1.3.9.jar"/>
    <path refid="library.com.googlecode.gwtquery:gwtquery:1.4.3.classpath"/>
  </path>
  
  <path id="crazy_input.runtime.production.module.classpath">
    <pathelement location="${crazy_input.output.dir}"/>
    <path refid="library.gwt-user.classpath"/>
    <pathelement location="${basedir}/lib/jsr305-1.3.9.jar"/>
    <path refid="library.com.googlecode.gwtquery:gwtquery:1.4.3.classpath"/>
  </path>
  
  <path id="crazy_input.module.classpath">
    <pathelement location="${crazy_input.output.dir}"/>
    <path refid="library.cloudbees.classpath"/>
    <path refid="library.gwt-user.classpath"/>
    <pathelement location="${basedir}/lib/jsr305-1.3.9.jar"/>
    <path refid="library.com.googlecode.gwtquery:gwtquery:1.4.3.classpath"/>
  </path>
  
  <path id="crazy_input.runtime.module.classpath">
    <pathelement location="${crazy_input.testoutput.dir}"/>
    <pathelement location="${crazy_input.output.dir}"/>
    <path refid="library.cloudbees.classpath"/>
    <path refid="library.gwt-user.classpath"/>
    <pathelement location="${basedir}/lib/jsr305-1.3.9.jar"/>
    <path refid="library.com.googlecode.gwtquery:gwtquery:1.4.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.crazy_input">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.crazy_input">
    <patternset refid="excluded.from.module.crazy_input"/>
  </patternset>
  
  <path id="crazy_input.module.sourcepath">
    <dirset dir="${module.crazy_input.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.crazy_input" depends="compile.module.crazy_input.production,compile.module.crazy_input.tests" description="Compile module crazy_input"/>
  
  <target name="compile.module.crazy_input.production" description="Compile module crazy_input; production classes">
    <mkdir dir="${crazy_input.output.dir}"/>
    <javac destdir="${crazy_input.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.crazy_input}"/>
      <bootclasspath refid="crazy_input.module.bootclasspath"/>
      <classpath refid="crazy_input.module.production.classpath"/>
      <src refid="crazy_input.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.crazy_input"/>
    </javac>
    
    <copy todir="${crazy_input.output.dir}">
      <fileset dir="${module.crazy_input.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.crazy_input.tests" depends="compile.module.crazy_input.production" description="compile module crazy_input; test classes" unless="skip.tests"/>
  
  <target name="clean.module.crazy_input" description="cleanup module">
    <delete dir="${crazy_input.output.dir}"/>
    <delete dir="${crazy_input.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.crazy_input" value="${module.crazy_input.basedir}/GWTCompilerOutput_crazy_input"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.crazy_input" description="Run GWT compiler">
    <java fork="true" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx1024m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.crazy_input}/gwt-dev.jar"/>
        <path refid="crazy_input.module.sourcepath"/>
        <path refid="crazy_input.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.crazy_input}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.crazy_input" depends="compile.module.crazy_input" description="Compile all GWT modules in module crazy_input">
    <property name="gwt.sdk.home.crazy_input" value="${gwt.sdk.home}"/>
    <antcall target="run.gwt.compiler.crazy_input">
      <param name="gwt.module.name" value="Demo"/>
    </antcall>
  </target>
</project>